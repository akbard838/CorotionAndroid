<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_24dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorCloudBlue"
        app:cardCornerRadius="@dimen/dimen_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clInformation"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:padding="@dimen/dimen_12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgInformation"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_75dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_high_fever" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvInformation"
                style="@style/CorotionText.Bold.RedLight"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_13sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgInformation"
                tools:text="Sore Throat" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>